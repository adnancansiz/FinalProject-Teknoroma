@model Issue
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Areas/Cashier/Views/Shared/_Layout.cshtml";
}

<div class="card w-75">
    <div class="card-body">
        <h4>Konu</h4>
        <h6 class="card-title">@Model.Subject</h6>
        <h4>Sorun</h4>
        <p class="card-text">@Model.Problem</p>
        @Html.ActionLink("Geri Dön", "Index", "Issue", new { id = Model.Id }, new { @class = "btn btn-primary" })
    </div>
</div>

