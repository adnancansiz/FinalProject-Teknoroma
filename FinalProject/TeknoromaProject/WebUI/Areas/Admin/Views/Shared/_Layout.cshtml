@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Identity
@inject UserManager<DAL.Entities.AppUser> userManager
@{
    Layout = null;
}

<style>
    body {
        
    }
</style>

<!DOCTYPE html>
<html lang="tr">

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Dashboard</title>

    <!-- Custom fonts for this template-->
    <link href="~/vendor/fontawesome-free/css/all.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />

</head>

<body id="page-top">

    <!-- Page Wrapper -->
    <div id="wrapper">

        <!-- Sidebar -->
        <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">
            <!-- Divider -->
            <hr class="sidebar-divider my-0">

            <!-- Nav Item - Dashboard -->
            <li class="nav-item active">
                <a class="nav-link" asp-action="Index" asp-controller="Home">
                    <i class="fas fa-fw fa-tachometer-alt"></i>
                    <span>Anasayfa</span>
                </a>
            </li>

            <!-- Divider -->
            <hr class="sidebar-divider">

            <!-- Heading -->
            <div class="sidebar-heading">
                İşlemler
            </div>

            <!-- Nav Item - Pages Collapse Menu -->
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#KategoriIslemleri"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <span>Kategori İşlemleri</span>
                </a>
                <div id="KategoriIslemleri" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Kategori İşlemleri:</h6>
                        <a class="collapse-item" asp-action="Index" asp-controller="Category">Kategoriler</a>
                        <a class="collapse-item" asp-action="Create" asp-controller="Category">Kategori Ekle</a>
                        <h6 class="collapse-header">Alt Kategori İşlemleri:</h6>
                        <a class="collapse-item" asp-action="Index" asp-controller="SubCategory">Alt Kategoriler</a>
                        <a class="collapse-item" asp-action="Create" asp-controller="SubCategory">Alt Kategori Ekle</a>
                    </div>
                </div>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#UrunIslemleri"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <span>Ürün İşlemleri</span>
                </a>
                <div id="UrunIslemleri" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Ürün İşlemleri:</h6>
                        <a class="collapse-item" asp-action="Index" asp-controller="Product">Ürünler</a>
                        <a class="collapse-item" asp-action="Create" asp-controller="Product">Ürün Ekle</a>
                    </div>
                </div>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#MusteriIslemleri"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <span>Müşteri İşlemleri</span>
                </a>
                <div id="MusteriIslemleri" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Müşteri İşlemleri:</h6>
                        <a class="collapse-item" asp-action="Index" asp-controller="Customer">Müşteriler</a>
                        <a class="collapse-item" asp-action="Create" asp-controller="Customer">Müşteri Ekle</a>
                    </div>
                </div>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#SiparisIslemleri"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <span>Sipariş İşlemleri</span>
                </a>
                <div id="SiparisIslemleri" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Sipariş İşlemleri:</h6>
                        <a class="collapse-item" asp-action="Index" asp-controller="Order">Siparişler</a>
                        <a class="collapse-item" asp-action="CreateOrder" asp-controller="Order">Sipariş Oluştur</a>
                    </div>
                </div>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#TedarikciIslemleri"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <span>Tedarikçi İşlemleri</span>
                </a>
                <div id="TedarikciIslemleri" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Tedarikçi İşlemleri:</h6>
                        <a class="collapse-item" asp-action="Index" asp-controller="Supplier">Tedarikçiler</a>
                        <a class="collapse-item" asp-action="Create" asp-controller="Supplier">Tedarikçi Ekle</a>
                    </div>
                </div>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#CalisanIslemleri"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <span>Personel İşlemleri</span>
                </a>
                <div id="CalisanIslemleri" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Personel İşlemleri:</h6>
                        <a class="collapse-item" asp-action="Index" asp-controller="User">Personeller</a>
                        <a class="collapse-item" asp-action="Create" asp-controller="User">Personel Ekle</a>
                    </div>
                </div>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#Rapor"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <span>Raporlar</span>
                </a>
                <div id="Rapor" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Rapor İşlemleri:</h6>
                        <a class="collapse-item" asp-action="SupplierReport" asp-controller="Report">Tedarikçi Raporu</a>
                        <a class="collapse-item" asp-action="ProductReport" asp-controller="Report">Ürün Raporu </a>
                        <a class="collapse-item" asp-action="CategoryReport" asp-controller="Report">Kategori Raporu </a>
                        <a class="collapse-item" asp-action="ExpenseReport" asp-controller="Report">Gider Raporu </a>
                        <a class="collapse-item" asp-action="SalesTrackingReport" asp-controller="Report">Satış Takip Raporu </a>
                    </div>
                </div>
            </li>
            <hr class="sidebar-divider">
            <li class="nav-item">
                <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#SorunBildir"
                   aria-expanded="true" aria-controls="collapseTwo">
                    <span>Sorun Bildir</span>
                </a>
                <div id="SorunBildir" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                    <div class="bg-white py-2 collapse-inner rounded">
                        <h6 class="collapse-header">Personel İşlemleri:</h6>
                        <a class="collapse-item" asp-action="Create" asp-controller="Issue">Kayıt Aç</a>
                        <a class="collapse-item" asp-action="Index" asp-controller="Issue">Açılan Kayıtlar</a>
                    </div>
                </div>
            </li>
        </ul>
        <!-- Content Wrapper -->
        <div id="content-wrapper" class="d-flex flex-column">

            <!-- Main Content -->
            <div id="content">

                <!-- Topbar -->
                <nav class="navbar navbar-expand navbar-light bg-white topbar mb-4 static-top shadow">

                    <!-- Sidebar Toggle (Topbar) -->
                    <button id="sidebarToggleTop" class="btn btn-link d-md-none rounded-circle mr-3">
                        <i class="fa fa-bars"></i>
                    </button>
                    <!-- Topbar Navbar -->
                    <ul class="navbar-nav ml-auto">

                        <!-- Nav Item - Alerts -->
                        <li class="nav-item dropdown no-arrow mx-1">
                            <a class="nav-link dropdown-toggle" href="#" id="alertsDropdown" role="button"
                               data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="fas fa-bell fa-fw"></i>
                                <!-- Counter - Alerts -->
                                <span class="badge badge-danger badge-counter">3+</span>
                            </a>
                            <!-- Dropdown - Alerts -->
                            <div class="dropdown-list dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                 aria-labelledby="alertsDropdown">
                                <h6 class="dropdown-header">
                                    Alerts Center
                                </h6>
                                <a class="dropdown-item d-flex align-items-center" href="#">
                                    <div class="mr-3">
                                        <div class="icon-circle bg-primary">
                                            <i class="fas fa-file-alt text-white"></i>
                                        </div>
                                    </div>
                                    <div>
                                        <div class="small text-gray-500">December 12, 2019</div>
                                        <span class="font-weight-bold">A new monthly report is ready to download!</span>
                                    </div>
                                </a>
                                <a class="dropdown-item text-center small text-gray-500" href="#">Show All Alerts</a>
                            </div>
                        </li>


                        <!-- Nav Item - User Information -->
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown no-arrow">
                                <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button"
                                   data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    <span class="mr-2 d-none d-lg-inline text-gray-600 small">@User.Identity.Name</span>
                                    @*<img class="img-profile rounded-circle"
                                        src="~/img/undraw_profile.svg">*@
                                </a>
                                <!-- Dropdown - User Information -->
                                <div class="dropdown-menu dropdown-menu-right shadow animated--grow-in"
                                     aria-labelledby="userDropdown">
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" asp-controller="Account" asp-action="LogOut" asp-route-id="@userManager.GetUserId(User)" data-target="#logoutModal">
                                        <i class="fas fa-sign-out-alt fa-sm fa-fw mr-2 text-gray-400"></i>
                                        Çıkış
                                    </a>
                                </div>
                            </li>
                        }


                    </ul>

                </nav>
                @RenderBody()
            </div>

            <!-- Footer -->
            <footer class="sticky-footer bg-white">
                <div class="container my-auto">
                    <div class="copyright text-center my-auto">
                        <span>Copyright &copy; Final Project 2021-Teknoroma</span>
                    </div>
                </div>
            </footer>
            <!-- End of Footer -->

        </div>
        <!-- End of Content Wrapper -->

    </div>
    <!-- End of Page Wrapper -->
    <!-- Scroll to Top Button-->
    <a class="scroll-to-top rounded" href="#page-top">
        <i class="fas fa-angle-up"></i>
    </a>

    <!-- Logout Modal-->
    <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Ready to Leave?</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Select "Logout" below if you are ready to end your current session.</div>
                <div class="modal-footer">
                    <button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button>
                    <a class="btn btn-primary" href="login.html">Logout</a>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/vendor/jquery/jquery.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/js/chosen.jquery.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/vendor/jquery-easing/jquery.easing.js"></script>

    <!-- Custom scripts for all pages-->
    <link href="~/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/css/chosen.min.css" rel="stylesheet" />

    <!-- Page level plugins -->
    <script src="~/vendor/chart.js/Chart.js"></script>
    <script src="~/js/sb-admin-2.js"></script>
    <!-- Page level custom scripts -->
    <script src="~/js/demo/chart-area-demo.js"></script>
    <script src="~/js/demo/chart-pie-demo.js"></script>
    <script src="~/js/demo/datatables-demo.js"></script>
    <script src="~/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/vendor/datatables/dataTables.bootstrap4.js"></script>
    @RenderSection("scripts", false)

</body>

</html>
