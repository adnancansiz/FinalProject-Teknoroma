@model Order
@{
    ViewData["Title"] = "CreateOrder";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Müşteriler</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>TCKN</th>
                        <th>İsim</th>
                        <th>Mail</th>
                        <th>Adres</th>
                        <th>Telefon Numarası</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>TCKN</th>
                        <th>İsim</th>
                        <th>Mail</th>
                        <th>Adres</th>
                        <th>Telefon Numarası</th>
                    </tr>
                </tfoot>
                <tbody>
                    @foreach (Customer customer in ViewBag.Customer)
                    {
                        <tr>
                            <td>@customer.TC</td>
                            <td>@customer.CustomerName</td>
                            <td>@customer.EmailAddress</td>
                            <td>@customer.Address</td>
                            <td>@customer.Phone</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<div class="container">
    <div class="row">
        <div class="col-md-6 mx-auto">
            <div asp-validation-summary="All">

            </div>

            <form method="get">
                <div class="form-group">
                    <label>Müşteri TCKN</label>
                    <input asp-for="Customer.TC" type="text" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Kasiyer ID</label>
                    <input asp-for="AppUserId" type="text" class="form-control" />
                </div>

                <button class="btn btn-primary" asp-action="Create" asp-controller="Order">Kaydet</button>
            </form>
        </div>
    </div>
</div>




